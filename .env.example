# ===========================================
# НАСТРОЙКИ СЕРВЕРА
# ===========================================
# Порт на котором запускается сервер
PORT=5000

# ===========================================
# НАСТРОЙКИ EMAIL (GMAIL)
# ===========================================
# Твой Gmail аккаунт для отправки писем
GMAIL_USER=your.email@gmail.com

# Пароль приложения от Gmail (16 символов)
# Как получить: Настройки Google аккаунта → Безопасность → Пароли приложений
GMAIL_APP_PASS=your_16_digit_app_password

# Email на который будут приходить письма с заявками
RECEIVER_EMAIL=your.email@gmail.com

# ===========================================
# НАСТРОЙКИ TELEGRAM
# ===========================================
# Токен бота от @BotFather
# Как получить: Найти @BotFather в Telegram → /newbot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Твой Chat ID 
# Как получить: Найти @userinfobot в Telegram → отправить любое сообщение
TELEGRAM_ID=123456789